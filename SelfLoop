import java.util.*;

public class SelfLoop {
    public static void main(String[] args) {
        List<List<Integer>> graph = new ArrayList<>();
        for (int i = 0; i < 3; i++) graph.add(new ArrayList<>());

        graph.get(0).add(0); // self loop

        for (int i = 0; i < 3; i++)
            System.out.println("Node " + i + ": " + graph.get(i));
    }
}
